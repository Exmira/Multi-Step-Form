<% if action_name == 'new' %>
  <%= form_with(model: car, url: next_step_cars_path(step: 1), method: :post, local: false) do |form| %>
    <%= turbo_frame_tag "step1" do %>
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title %>
      </div>
      <%= form.submit "Next" %>
    <% end %>
  <% end %>
<% elsif action_name == 'edit' %>
  <%= form_with(model: car, url: car_path(car), method: :patch, local: false) do |form| %>
    <%= turbo_frame_tag "step1" do %>
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title %>
      </div>
      <div id="make-container">
        <%= form.label :make, style: "display: block" %>
        <%= form.text_field :make %>
      </div>
      <div id="make-container">
        <%= form.label :color, style: "display: block" %>
        <%= form.select :color, options_for_select(color_options(car.make)) %>
      </div>
      <%= form.submit "Update" %>
    <% end %>
  <% end %>
<% end %>
