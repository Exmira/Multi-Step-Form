<%= turbo_frame_tag "step2" do %>
  <div>
    <%= form_with(model: car, url: next_step_cars_path(step: 2), method: :post, local: false) do |form| %>
      <div id="make-container">
        <%= form.label :make, style: "display: block" %>
        <%= form.text_field :make, id: "make-field" %>
      </div>
      <%= form.text_field :title, value: car.title, style: "display: none" %>
      <%= form.submit "Next" %>
    <% end %>
    <%= button_to "Back", previous_step_cars_path(step: 2, car: car), method: :post, local: false, params: { car: car.attributes } %>
  <% end %>
